{
  "name": "importer-vscode",
  "displayName": "importer-vscode",
  "description": "Importer Extension for Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "importer-vscode.update",
        "category": "Importer",
        "title": "Update"
      },
      {
        "command": "importer-vscode.purge",
        "category": "Importer",
        "title": "Purge"
      },
      {
        "command": "importer-vscode.wrap-with-importer",
        "category": "Importer",
        "title": "Wrap with Importer Marker"
      },
      {
        "command": "importer-vscode.wrap-with-exporter",
        "category": "Importer",
        "title": "Wrap with Exporter Marker"
      },
      {
        "command": "importer-vscode.fold-imported",
        "category": "Importer",
        "title": "Fold Imported"
      },
      {
        "command": "importer-vscode.placeholder",
        "category": "Importer",
        "title": "Placeholder, no implementation, only for testing command pallette"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "importer-vscode.placeholder",
          "when": "editorFocus"
        }
      ]
    },
    "snippets": [
      {
        "language": "yaml",
        "path": "./src/snippets/yaml-importer.code-snippets"
      },
      {
        "language": "markdown",
        "path": "./src/snippets/markdown-importer.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.62.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "@vscode/test-electron": "^1.6.2"
  }
}
